@using ReportViewModel
@model ReportViewModel.InvStore.TrxHdr
@{
    string _SubTitle = Model.pageSetting["SubTitle"].ToString();
    string _Company = Model.pageSetting["Company"].ToString();
    string _Party = Model.pageSetting["Party"].ToString();
    string _Docref = Model.pageSetting["RefNo"].ToString();
    string _person1 = Model.pageSetting["Person1"].ToString();
    string _name1 = Model.pageSetting["Name1"].ToString();
    string _person2 = Model.pageSetting["Person2"].ToString();
    string _name2 = Model.pageSetting["Name2"].ToString();
    string _person3 = Model.pageSetting["Person3"].ToString();
    string _name3 = Model.pageSetting["Name3"].ToString();

    ViewData["Title"] = _SubTitle;
}

<table class="table">
    <tr class="no-border">
        <td colspan="3" class="align-content-center no-border">
            <div style="display:flex;flex-direction:column;align-items:center;">
                <h2 > @_Company </h2>
                <h2> (@_SubTitle) </h2>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="2" class="no-border" width="65%">
            <table width="90%">
                <tr>
                    <td width="80px">
                         @_Party: 
                    </td>
                    <td  style="border-bottom: 2px solid black !important;">

                    </td>
                </tr>
           </table>
        </td>
        <td class="no-border" >
           
             <table width="90%">
                <tr>
                    <td width="150px">
                          @_Docref:
                    </td>
                    <td  style="border-bottom: 1px solid black !important;">
                        @Model.Id
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td colspan="2"> 
             <table width="90%">
                <tr>
                    <td width="80px">
                         &nbsp;
                    </td>
                    <td  style="border-bottom: 1px solid black !important;">
                         @Model.Address
                    </td>
                </tr>
            </table>
        </td>
        <td>
             <table width="90%">
                <tr>
                    <td width="150px">
                          Date:
                    </td>
                    <td  style="border-bottom: 1px solid black !important;">
                         @Model.Date.ToString("MMM dd yyyy")
                    </td>
                </tr>
            </table>
            
        </td>

    </tr>

    <tr>
        <td colspan="3">

            <!-- Particulars Table -->

            <Table class="table thick-border">
                <tr>
                    <th colspan="9" class="no-border" style="border-right: 1px solid black !important;border-bottom: 1px solid black !important;">
                        PARTICULARS
                    </th>
                    <th colspan="1" class="text-center no-border" style="border-left: 2px solid black !important;border-bottom: 1px solid black !important;">
                        QTY
                    </th>
                    <th colspan="2" class="no-border" style="border-right: 1px solid black !important;border-bottom: 1px solid black !important;">
                        REMARKS
                    </th>
                </tr>
                    @foreach (var item in Model.Details)
                    {
                        <tr>
                            <td width="50" class="no-border">
                                <span> @item.Count </span>
                            </td>
                            <td colspan="8" class="no-border">
                                @item.Description
                            </td>
                            <td class="thick-border-left text-center no-border" style="border-left: 2px solid black !important;border-bottom:0px solid white !important;">
                                @item.Qty
                            </td>
                            <td class="thick-border-right no-border" style="border-right: 2px solid black !important;">
                                @item.Remarks
                            </td>
                        </tr>
                    }


                    @for(int i=Model.Details.Count; i < 10; i++)
                    {
                        <tr>
                            <!-- Particulars -->
                            <td ></td>
                            <td colspan="8"></td>

                            <!-- Amounts -->
                            <td class="thick-border-left" style="border-left: 2px solid black !important;"></td>
                            <td class="thick-border-right" style="border-right: 2px solid black !important;"></td>
                        </tr> 
                    }
                   
                <tr class="thick-border">
                        <td colspan="9"  class="thick-border-right" style="border-right: 2px solid black;">
                            <span class="pull-right"> TOTAL : @Model.GetTotalItemsCount() </span>
                        </td>
                        <td colspan="1" class="thick-border-top text-center" >
                            @Model.GetTotalItemsQty() 
                        </td>
                        <td colspan="1" class="thick-border-top" style="border-right: 2px solid black !important">

                        </td>
                </tr>
            </Table>

        </td>

    </tr>
    
    <tr>
        <td class="no-border">
            @_person1
        </td>
        <td class="no-border">
            @_person2
        </td>
        <td class="no-border">
            @_person3
        </td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <td > 
            @_name1
        </td>
        <td > 
            @_name2
        </td>
        <td > 
            @_name3
        </td>
    </tr>
</table>




@{
    //code here
}
