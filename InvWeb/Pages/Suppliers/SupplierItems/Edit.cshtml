                <span asp-validation-for="InvSupplierItem.InvItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.Remarks" class="control-label"></label>
                <input asp-for="InvSupplierItem.Remarks" class="form-control" />
                <span asp-validation-for="InvSupplierItem.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.Price" class="control-label"></label>
