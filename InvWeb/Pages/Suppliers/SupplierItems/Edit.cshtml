@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(() => {
            //set default
            $('.datetimepicker').val(moment().format("MMM DD YYYY hh:mm A"));
        });
    </script>
}
