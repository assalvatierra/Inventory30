@page
@model InvWeb.Suppliers.Supplier.IndexModel

@{
    ViewData["Title"] = "Suppliers Index";
}

<h1>Suppliers </h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Supplier Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierIndexModel.InvSupplier[0].Remarks)
            </th>
            <th>

            </th>
            <th></th>
        </tr>
    </thead>
   
    <tbody>
        @foreach (var item in Model.SupplierIndexModel.InvSupplier)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>

                <a asp-page="../SupplierItems/Index" asp-route-id="@item.Id">Supplier Items</a> 
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
