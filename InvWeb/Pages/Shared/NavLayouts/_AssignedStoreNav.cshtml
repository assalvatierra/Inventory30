@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{

    int? storeID = 0;
    string userStores = "";
    dynamic usersStoresArr = new System.Dynamic.ExpandoObject();
    if (Context.Session.GetInt32("_UsersStoreId") != null)
    {
        storeID = Context.Session.GetInt32("_UsersStoreId");
    }

    if (Context.Session.GetString("_CurrentUserStores") != null)
    {
         userStores = Context.Session.GetString("_CurrentUserStores");
         usersStoresArr  = JsonConvert.DeserializeObject(userStores);

    }
}
<!-- Content goes Here -->
    @if (usersStoresArr != null)
    {
        foreach (var store in usersStoresArr)
        {
          
           <li class="dropdown-btn">
                <a href="#" id="sidenav-Items">
                     
                    <span id="Store-@store.Id" > @store.StoreName </span>
                    <i class="float-right dropdown-toggle"></i>
                </a>
            </li>

            <li class="dropdown-container">
                <a href="/Stores/Main/@store.Id">Go to MyStore</a>
                <a href="/Stores/Receiving?storeId=@store.Id&status=PENDING ">Receiving</a>
                <a href="/Stores/Releasing/@store.Id?status=PENDING">Releasing</a>
                <a href="/Stores/PurchaseRequest/@store.Id?status=PENDING">Purchase Request</a>
            </li>
        }
    }
    else
    {
        @if (storeID != 0) { 

        <li class="dropdown-btn">
            <a href="#" id="sidenav-Items">
                MyStore 
                <i class="float-right dropdown-toggle"></i>
            </a>
        </li>

        <li class="dropdown-container">
            <a href="/Stores/Main/@storeID">Go to MyStore</a>
            <a href="/Stores/Receiving?storeId=@storeID&status=PENDING ">Receiving</a>
            <a href="/Stores/Releasing/@storeID?status=PENDING">Releasing</a>
            <a href="/Stores/PurchaseRequest/@storeID?status=PENDING">Purchase Request</a>
        </li>
    }
    }

