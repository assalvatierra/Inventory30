@page
@model InvWeb.Pages.PurchaseOrders.InvPOHdrs.DetailsModel

@{
    ViewData["Title"] = "Purchase Order Details";

    IEnumerable<CoreLib.Inventory.Models.InvPoItem> invPOItems = ViewBag.POItems;
}

<h1>Purchase Order Details</h1>

<div>
    <h4>PO Headers</h4>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.InvPoHdr.Id">Edit</a> |
        <a asp-page="./Index">Back to List</a>
    </div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdr.DtPo)
        </dt>
        <dd class="col-sm-10">
            @Model.InvPoHdr.DtPo.ToString("MMM dd yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdr.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdr.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdr.InvSupplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdr.InvSupplier.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdr.InvStore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdr.InvStore.StoreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdr.InvPoHdrStatu.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdr.InvPoHdrStatu.Status)
        </dd>
    </dl>
</div>


<div>
    <h4>PO Items</h4>
    <p>
        <a asp-page="../InvPOItems/Create" asp-route-invPoHdrid="@Model.InvPoHdr.Id">Create New</a>
    </p>
    <!-- Inv Items component -->
    <table class="table">
        <thead>
            <tr>
                <th>
                    Item
                </th>
                <th>
                    Qty
                </th>
                <th>
                    Unit
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in invPOItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvItem.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemQty)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvUom.uom)
                    </td>
                    <td>
                        <a asp-page="../InvPOItems/Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-page="../InvPOItems/Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-page="../InvPOItems/Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        Item Count:
        @Model.InvPoHdr.InvPoItems.Count()
    </p>
</div>