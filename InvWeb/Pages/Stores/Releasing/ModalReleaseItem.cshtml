@model InvWeb.Pages.Stores.Releasing.FormModel



<!-- Modal Edit -->
<div class="modal fade" id="ItemReleaseModal" tabindex="-1" role="dialog" aria-labelledby="itemEditModal" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:50rem">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Release Item </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style="padding:20px;">
                <div>

                    <input class="form-control" type="text" id="ReleaseItem-TrxId" hidden>
                    <input class="form-control" type="text" id="ReleaseItem-RcvdItemId" hidden>
                    <input class="form-control" type="text" id="ReleaseItem-UomId" hidden>
                    <input class="form-control" type="text" id="ReleaseItem-ExpectedQty-Input" hidden>

                    <div class="row">
                        <div class="col-8">
                            <label class="control-label"> Item </label><br />
                            <span style="font-weight:bold;font-size:15px;margin-left:12px;" id="ReleaseItem-ItemName"> </span>
                        </div>
                        <div class="col-4">
                            <label class="control-label" style="white-space:nowrap"> Expected Qty </label><br />
                            <span style="font-weight:bold;font-size:15px;margin-left:12px;" id="ReleaseItem-ExpectedQty"> </span>
                            <span style="font-weight:bold;font-size:15px;" id="ReleaseItem-Uom"> </span>
                        </div>
                    </div>
                    <hr />

                    <div class="row">
                        <div class="col-4">
                            <label class="control-label" style="white-space:nowrap"> Heat/LotNo </label>
                            <input class="form-control" type="text" id="ReleaseItem-LotNo" readonly>
                        </div>

                        <div class="col-4" hidden>
                            <label class="control-label"> Brand </label>
                            <select class="form-control" asp-items="ViewBag.Brands" id="ReleaseItem-BrandId"></select>
                        </div>

                        <div class="col-4" hidden>
                            <label class="control-label"> Origin </label>
                            <select class="form-control" asp-items="ViewBag.Origins" id="ReleaseItem-OriginId"></select>
                        </div>

                        <div class="col-3">
                            <label class="control-label" style="white-space:nowrap"> Batch </label>
                            <input class="form-control" type="text" id="ReleaseItem-BatchNo" readonly>
                        </div>

                        <div class="col-4">
                            <label class="control-label" style="white-space:nowrap"> Release&nbsp;Qty </label>
                            <div style="display:flex;">
                                <input id="ReleaseItem-ActualQty" type="number" class="form-control" value="0" min="0" />
                                <span id="ReleaseItem-ActualUom" style="margin-top:5px;margin-left:10px;">  QTY </span>
                            </div>
                            <div id="Release-Form-Feedback-Qty" class="invalid-feedback">
                            </div>
                        </div>

                        <div class="col-4" style="margin-top:10px;">
                            <label class="control-label" style="white-space:nowrap"> Origin </label>
                            <input class="form-control" type="text" id="ReleaseItem-Origin" readonly>
                        </div>
                        <div class="col-4" style="margin-top:10px;">
                            <label class="control-label" style="white-space:nowrap"> Brand </label>
                            <input class="form-control" type="text" id="ReleaseItem-Brand" readonly>
                        </div>
                        <div class="col-4" style="margin-top:10px;">
                            <label class="control-label" style="white-space:nowrap"> Area </label>
                            <select class="form-control" asp-items="ViewBag.StoreAreas" id="ReleaseItem-Area" disabled></select>
                        </div>  
                    </div>

                    <div class="row" style="margin-top:10px;" >
                        <div class="col-12">
                            <label class="control-label"> Remarks </label>
                            <input class="form-control" type="text" id="ReleaseItem-Remarks">
                        </div>

                        <p id="ReleaseItem-warning-text" class="text-danger">  </p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Release" class="btn btn-primary" onclick="SubmitReleasingForm()" id="SubmitReleasingFormBtn" />
            </div>
        </div>
    </div>
</div>

