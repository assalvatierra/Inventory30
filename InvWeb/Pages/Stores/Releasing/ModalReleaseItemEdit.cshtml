                        <div class="col-3">
                            <label class="control-label" style="white-space:nowrap"> Batch </label>
                            <input class="form-control" type="text" id="ReleaseItemEdit-BatchNo">
                        </div>

                        <div class="col-4">
                            <label class="control-label" style="white-space:nowrap"> Release&nbsp;Qty </label>
                            <div style="display:flex;">
                                <input id="ReleaseItemEdit-ActualQty" type="number" class="form-control" value="0" min="0" />
                                <span id="ReleaseItemEdit-ActualUom" style="margin-top:5px;margin-left:10px;">  QTY </span>
