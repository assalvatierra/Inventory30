                <span asp-validation-for="ReleasingEditModel.InvTrxHdr.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ReleasingEditModel.InvTrxHdr.InvTrxTypeId" class="control-label"></label>
