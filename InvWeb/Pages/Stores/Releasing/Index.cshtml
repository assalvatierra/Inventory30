@page "{storeId:int?}"
@model InvWeb.Pages.Stores.Releasing.IndexModel

@{
    ViewData["Title"] = "Releasing";

    bool IsAdmin = Model.ReleasingIndexModel.IsAdmin;
    bool IsAccounting = (bool)ViewData["IsAccounting"];
    bool IsProcurementHead = (bool)ViewData["IsProcurementHead"];

    int STATUS_PENDING = 1;
    int STATUS_APPROVED = 2;
    int STOREID = (int)ViewData["StoreId"];
    
}

<h1>
    Releasing

    @if (Model.ReleasingIndexModel.Status == "ACCEPTED")
    {
        <span style="font-size:1rem;">(Released)</span>
    }
    else
    {
        <span style="font-size:1rem;">(Pending)</span>
    }
</h1>

<p>
    <a asp-page="../Main/Index" asp-route-id="@Model.ReleasingIndexModel.StoreId">Go back to MyStore</a> |
    @if (Model.ReleasingIndexModel.Status == "ACCEPTED")
    {
        <a asp-page="./Index" asp-route-storeId="@Model.ReleasingIndexModel.StoreId" asp-route-Status="PENDING">Go recent Pendings</a>
    }
    else
    {
        <a asp-page="./Index" asp-route-storeId="@Model.ReleasingIndexModel.StoreId" asp-route-Status="ACCEPTED">Go recent Released</a>
    }
</p>
<p>
    <a asp-page="Create" asp-route-storeId="@Model.ReleasingIndexModel.StoreId" class="btn btn-primary">Create New</a>
</p>

<form method="post">
    <div hidden>
        <input type="text" value="@Model.ReleasingIndexModel.StoreId" name="storeId" id="storeId" />
    </div>

    <div class="btn-group btn-group-toggle" data-toggle="buttons" style="margin-left:10px;">
        <label class="btn btn-outline-primary" id="status-all" onclick="UpdatePagefilter( @STOREID ,'ALL')">
            <input type="radio" asp-for="Status" autocomplete="off" value="ALL"> All
        </label>
        <label class="btn btn-outline-primary" id="status-pending" onclick="UpdatePagefilter( @STOREID ,'PENDING')">
            <input type="radio" asp-for="Status" autocomplete="off" value="PENDING" checked> Request
            <span class="badge badge-danger" style="color:white;">
                @ViewBag.StatusCountRequest
            </span>

        </label>
        <label class="btn btn-outline-primary" id="status-approved" onclick="UpdatePagefilter( @STOREID ,'APPROVED')">
            <input type="radio" asp-for="Status" autocomplete="off" value="APPROVED">  Approved
            <span class="badge badge-danger" style="color:white;">
                @ViewBag.StatusCountApproved
            </span>
        </label>
        <label class="btn btn-outline-primary" id="status-closed" onclick="UpdatePagefilter( @STOREID ,'CLOSED')">
            <input type="radio" asp-for="Status" autocomplete="off" value="CLOSED">  Closed
        </label>
        <label class="btn btn-outline-primary" id="status-cancelled" onclick="UpdatePagefilter( @STOREID ,'CANCELLED')">
            <input type="radio" asp-for="Status" autocomplete="off" value="CANCELLED">  Cancelled
        </label>
    </div>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-outline-primary" id="orderby-asc">
            <input type="radio" asp-for="Orderby" autocomplete="off" value="ASC" checked> ASC
        </label>
        <label class="btn btn-outline-primary" id="orderby-desc">
            <input type="radio" asp-for="Orderby" autocomplete="off" value="DESC"> DESC
        </label>
    </div>
    <button class="btn btn-primary" type="submit"> Filter </button>
</form>
<div class="table-responsive card rounded-3 card-round-border">

    <table class="table custom-table-list  rounded-3 overflow-hidden">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                
            </th>
            <th>
                Details
            </th>
            <th>
                
            </th>
            <th> Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReleasingIndexModel.InvTrxHdrs)
        {
            <tr>
                <td class="td-actions">
                        <!-- Actions -->
                        @if (item.InvTrxHdrStatusId == STATUS_PENDING)
                        {
                            <a asp-page="./Edit" asp-route-id="@item.Id">
                                <img src="~/img/icons/icons-edit-blue.png" class="action-icons" width="20" height="20" alt="Edit" data-toggle="tooltip" data-placement="top" title="Edit">
                            </a>

                            <a asp-page="../Printables/RequestForm" asp-route-id="@item.Id" asp-route-type="@item.InvTrxTypeId" target="_blank">
                                <img src="~/img/icons/icons-print.png" class="action-icons" width="20" height="20" alt="Print" data-toggle="tooltip" data-placement="top" title="Details">
                            </a>
                        }

                        @if (item.InvTrxHdrStatusId == STATUS_APPROVED)
                        {

                            <a asp-page="../Printables/FinalRequestForm" asp-route-id="@item.Id" asp-route-type="@item.InvTrxTypeId" target="_blank">
                                <img src="~/img/icons/icons-print.png" class="action-icons" width="20" height="20" alt="Print" data-toggle="tooltip" data-placement="top" title="Print">
                            </a>

                        }

                        <a asp-page="./Form" asp-route-id="@item.Id">
                            <img src="~/img/icons/icons-details-blue.png" class="action-icons" width="20" height="20" alt="Details" data-toggle="tooltip" data-placement="top" title="Details">
                        </a>

                </td>
                    <td class="td-actions">

                        @if (item.InvTrxHdrStatusId == STATUS_PENDING && (IsAdmin || IsAccounting || IsProcurementHead))
                        {

                            if (Model.IsTransactionHaveApprovedRecord(item.Id, "Accounting"))
                            {
                                <button class="btn btn-success"  disabled> Accounting Approved </button>
                            }
                            else if(IsAccounting)
                            {
                                <button class="btn btn-primary" onclick="ApprovedbyAccountingTrxHdr(this, '@item.Id')"> Accounting Approval  </button>
                            } else {

                                <button class="btn btn-primary" disabled> For Accounting Approval  </button>

                            }

                            if (Model.IsTransactionHaveApprovedRecord(item.Id, "Approved"))
                            {
                                <button class="btn btn-success"  disabled> Mgt Approved </button>
                            }
                            else if (IsAdmin)
                            {
                                <button class="btn btn-primary" onclick="ApprovedTrxHdr(this, '@item.Id')"> Mgt Approve </button>
                            }
                            else
                            {
                                <button class="btn btn-primary" disabled> For Mgt Approve </button>
                            }

                            if (Model.IsTransactionHaveApprovedRecord(item.Id, "Verified"))
                            {
                                <button class="btn btn-success"  disabled> Procurement Verified </button>
                            }
                            else if (IsProcurementHead)
                            {
                                <button class="btn btn-primary" onclick="VerifiedTrxHdr(this,'@item.Id')"> Procurement Verify </button>
                            }
                            else
                            {
                                <button class="btn btn-primary" disabled> For Procurement Verify </button>
                            }
                        }

                    </td>
                <td class="td-bold"  style="padding-top:18px;">
                        @item.Id - 
                        @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                        <table class="table table-borderless">
                            <tr>
                                <th> Items</th>
                                <th> Batch No </th>
                                <th> Qty</th>
                            </tr>
                            @foreach (var dlts in item.InvTrxDtls)
                            {

                                <tr>
                                    <td style="width:25rem;">
                                        ( @dlts.InvItem.Code )
                                        @dlts.InvItem.Description
                                        @dlts.InvItem.Remarks
                                         -
                                        @if (dlts.InvItem.InvItemSpec_Steel.Count() != 0)
                                        {
                                            <span>
                                            (@dlts.InvItem.InvItemSpec_Steel.First().SteelBrand.Name)

                                            @dlts.InvItem.InvItemSpec_Steel.First().SteelMaterial.Name

                                            @dlts.InvItem.InvItemSpec_Steel.First().SteelMaterialGrade.Name -

                                            @dlts.InvItem.InvItemSpec_Steel.First().SteelOrigin.Name
                                            </span>
                                        }
                                    </td>
                                    <td style="width:5rem;">
                                         @dlts.BatchNo
                                    </td>
                                    <td style="width:5rem;">
                                        @dlts.ItemQty

                                        @if (dlts.InvUom != null)
                                        {
                                            @dlts.InvUom.uom
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                </td>
                <td class="td-bold" style="padding-top:18px;">
                    @item.DtTrx.ToString("MMM dd yyyy")
                </td>
                
            </tr>
        }
    </tbody>
</table>

</div>


@section Scripts{
    <script type="text/javascript" src="~/js/Pages/Stores/Shared/Index.js"> </script>
    <script type="text/javascript" src="~/js/Pages/Stores/Receiving/Index.js"> </script>
    <script>
        $(() => {
            //on init status
            StatusFilter("@Model.Status");
            OrderFilter("@Model.Orderby");
            StatusFilter("@Model.ReleasingIndexModel.Status");
            OrderFilter("@Model.ReleasingIndexModel.Order");
            $('[data-toggle="tooltip"]').tooltip()
        });

        function ToggleItemList(itemId) {
            $("#card-hidden-" + itemId).toggle();

            var textval = $("#showtext-button-" + itemId).text().trim();
            // console.log("textval: " + textval);

            if (textval == "Show Items") {
                $("#showtext-button-" + itemId).text("Hide Items");
            }
            if (textval == "Hide Items") {
                $("#showtext-button-" + itemId).text("Show Items");
            }
        }

    </script>
} 