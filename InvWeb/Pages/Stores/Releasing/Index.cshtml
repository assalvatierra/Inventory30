@page "{storeId:int?}"
@model InvWeb.Pages.Stores.Releasing.IndexModel

@{
    ViewData["Title"] = "Releasing";

    bool IsAdmin = Model.ReleasingIndexModel.IsAdmin;
    int STATUS_PENDING = 1;
    
}

<h1>
    Releasing

    @if (Model.ReleasingIndexModel.Status == "ACCEPTED")
    {
        <span style="font-size:1rem;">(Released)</span>
    }
    else
    {
        <span style="font-size:1rem;">(Pending)</span>
    }
</h1>

<p>
    <a asp-page="../Main/Index" asp-route-id="@Model.ReleasingIndexModel.StoreId">Go back to MyStore</a> |
    @if (Model.ReleasingIndexModel.Status == "ACCEPTED")
    {
        <a asp-page="./Index" asp-route-storeId="@Model.ReleasingIndexModel.StoreId" asp-route-Status="PENDING">Go recent Pendings</a>
    }
    else
    {
        <a asp-page="./Index" asp-route-storeId="@Model.ReleasingIndexModel.StoreId" asp-route-Status="ACCEPTED">Go recent Released</a>
    }
</p>
<p>
    <a asp-page="Create" asp-route-storeId="@Model.ReleasingIndexModel.StoreId" class="btn btn-primary">Create New</a>
</p>

<form method="post">
    <div hidden>
        <input type="text" value="@Model.ReleasingIndexModel.StoreId" name="storeId" id="storeId" />
    </div>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-outline-primary" id="status-pending">
            <input type="radio" asp-for="Status" class="button" autocomplete="off" value="PENDING" checked> Requested
        </label>
        <label class="btn btn-outline-primary" id="status-accepted">
            <input type="radio" asp-for="Status" class="button" autocomplete="off" value="ACCEPTED"> Relased
        </label>
    </div>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-outline-primary" id="orderby-asc">
            <input type="radio" asp-for="Orderby" autocomplete="off" value="ASC" checked> ASC
        </label>
        <label class="btn btn-outline-primary" id="orderby-desc">
            <input type="radio" asp-for="Orderby" autocomplete="off" value="DESC"> DESC
        </label>
    </div>
    <button class="btn btn-primary" type="submit"> Filter </button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Ref#
            </th>
            <th>
                Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvTrxHdr[0].Remarks)
            </th>
            <th>
                Details
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReleasingIndexModel.InvTrxHdrs)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.DtTrx.ToString("MMM dd yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    <div>
                        <table class="table table-borderless">

                            @foreach (var dlts in item.InvTrxDtls)
                            {

                                <tr>
                                    <td>
                                        ( @dlts.InvItem.Code )
                                        @dlts.InvItem.Description
                                        @dlts.InvItem.Remarks
                                    </td>
                                    <td>
                                        @dlts.InvItem.Material
                                    </td>
                                    <td>
                                         @dlts.BatchNo
                                    </td>
                                    <td>
                                        @dlts.ItemQty

                                        @if (dlts.InvUom != null)
                                        {
                                            @dlts.InvUom.uom
                                        }
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </td>
                <td>
                    
                    <button class="btn btn-primary" onclick="ApprovedTrxHdr('@item.Id')"> Approve </button>
                    <button class="btn btn-primary" onclick="VerifiedTrxHdr('@item.Id')"> Verified </button>

                    @if (item.InvTrxHdrStatusId == STATUS_PENDING && IsAdmin)
                    {
                        <button class="btn btn-primary" onclick="ApproveHdr('@item.Id')"> Release </button>
                    } 
                </td>
                 <td>
                    <!-- Actions -->
                    @if(item.InvTrxHdrStatusId == STATUS_PENDING){
                        <a asp-page="../Printables/RequestForm" asp-route-id="@item.Id" asp-route-type="@item.InvTrxTypeId" target="_blank">Print</a> <span> | </span>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a><span> | </span>
                     }

                     <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                    
                     @if(item.InvTrxHdrStatusId == STATUS_PENDING){
                        <span> | </span><a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                     }
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts{
    <script type="text/javascript" src="~/js/Store/IndexFilter.js"></script>
    <script>
        $(() => {
            //on init status
            StatusFilter("@Model.Status");
            OrderFilter("@Model.Orderby");
        });


        function ApprovedTrxHdr(trxId){
            $.post('/api/ApiTrxHdrs/UpdateTrxHdrApproved?id=' + id, { id: id }, (res) => {
                console.log(res);
            }).done(() => {
                window.location.reload(false);
            });
        }

        function VerifiedTrxHdr(trxId) {
            $.post('/api/ApiTrxHdrs/UpdateTrxHdrVerified?id=' + id, { id: id }, (res) => {
                console.log(res);
            }).done(() => {
                window.location.reload(false);
            });
        }
    </script>
} 