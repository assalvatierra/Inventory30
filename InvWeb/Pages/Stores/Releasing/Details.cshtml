@page "{id:int?}"
@model InvWeb.Pages.Stores.Releasing.DetailsModel

@{
    ViewData["Title"] = "Releasing Details";
    IEnumerable<WebDBSchema.Models.InvTrxDtl> invTrxDtls = ViewBag.InvTrxDtls;
}

<h1>Releasing Details : @Model.InvTrxHdr.InvStoreId </h1>

<div>
    <h4> Transaction Header</h4>
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.InvTrxHdr.Id">Edit</a> |
        @if (Model.InvTrxHdr.InvTrxHdrStatusId == 1)
        {
            <a asp-page="./Index" asp-route-storeId="@Model.InvTrxHdr.InvStoreId" asp-route-status="PENDING">Back to List</a>
        }
        else
        {
            <a asp-page="./Index" asp-route-storeId="@Model.InvTrxHdr.InvStoreId" asp-route-status="ACCEPTED">Back to List</a>
        }

    </div>

    <hr />

    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="row">
                <div class="col-lg-8">
                    @Model.InvTrxHdr.InvTrxType.Type
                </div>
                <div class="col-lg-2">
                    @Model.InvTrxHdr.DtTrx.ToString("MMM dd yyyy")
                </div>
                <div class="col-lg-2">
                    @Model.InvTrxHdr.InvStore.StoreName
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div style="border:1px solid black;margin:5px 0px;padding:5px;">
                        Remarks: @Model.InvTrxHdr.Remarks
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    @Model.InvTrxHdr.InvTrxHdrStatu.Status
                </div>
                <div class="col-lg-4">
                    @Model.InvTrxHdr.UserId
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<h4> Transaction Details</h4>
<p>
    <a asp-page="./ItemDetails/Create" asp-route-hdrId="@Model.InvTrxHdr.Id">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                LotNo
            </th>
            <th>
                InvItem
            </th>
            <th>
                ItemQty
            </th>
            <th>
                InvUom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in invTrxDtls)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvItem.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LotNo)
                </td>
                <td>
                   ( @Html.DisplayFor(modelItem => item.InvItem.Code) )
                    @Html.DisplayFor(modelItem => item.InvItem.Description)
                    @Html.DisplayFor(modelItem => item.InvItem.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvItem.InvUom.uom)
                </td>
                <td>
                    <a asp-page="./ItemDetails/Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./ItemDetails/Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./ItemDetails/Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
