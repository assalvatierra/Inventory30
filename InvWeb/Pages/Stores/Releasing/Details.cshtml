@page "{id:int?}"
@model InvWeb.Pages.Stores.Releasing.DetailsModel

@{
    ViewData["Title"] = "Releasing Details";
    int STATUS_PENDING = 1;
}

<h1>Releasing Details : @Model.ReleasingDetailsModel.InvTrxHdr.InvStoreId </h1>

<div>
    <h4> Transaction Header</h4>
    <div>
        @if (Model.ReleasingDetailsModel.InvTrxHdr.InvTrxHdrStatusId == STATUS_PENDING)
        {
            <a asp-page="./Edit" asp-route-id="@Model.ReleasingDetailsModel.InvTrxHdr.Id">Edit</a> <span> | </span>
            <a asp-page="./Index" asp-route-storeId="@Model.ReleasingDetailsModel.InvTrxHdr.InvStoreId" asp-route-status="PENDING">Back to List</a>

            <div style="float:right;">
                <a asp-page="./Delete" asp-route-id="@Model.ReleasingDetailsModel.InvTrxHdr.Id">Delete</a>
            </div>

            <div class="pull-left">
                <a asp-page="../Printables/RequestForm" asp-route-id="@Model.ReleasingDetailsModel.InvTrxHdr.Id" asp-route-type="@Model.ReleasingDetailsModel.InvTrxHdr.InvTrxTypeId" target="_blank" class="btn btn-primary">Print Voucher</a>
            </div>
        }
        else
        {
            <a asp-page="./Index" asp-route-storeId="@Model.ReleasingDetailsModel.InvTrxHdr.InvStoreId" asp-route-status="ACCEPTED">Back to List</a>
        }
    </div>

    <hr />


    <div class="row">
        <div class="col-lg-8 col-sm-12">
            <div class="row">
                <div class="col-lg-4">
                    Type: @Model.ReleasingDetailsModel.InvTrxHdr.InvTrxType.Type
                </div>
                <div class="col-lg-4">
                    Date: @Model.ReleasingDetailsModel.InvTrxHdr.DtTrx.ToString("MMM dd yyyy")
                </div>
                <div class="col-lg-4">
                    Store: @Model.ReleasingDetailsModel.InvTrxHdr.InvStore.StoreName
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div style="border:0px solid black;margin:0px 0px;padding:0px;">
                        Remarks: @Model.ReleasingDetailsModel.InvTrxHdr.Remarks
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    Status: @Model.ReleasingDetailsModel.InvTrxHdr.InvTrxHdrStatu.Status
                </div>
                <div class="col-lg-4">
                    Request By: @Model.ReleasingDetailsModel.InvTrxHdr.UserId
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<h4> Transaction Details</h4>
<p>
    @if (Model.ReleasingDetailsModel.InvTrxHdr.InvTrxHdrStatusId == STATUS_PENDING)
    {
        <a asp-page="./ItemDetails/Create" asp-route-hdrId="@Model.ReleasingDetailsModel.InvTrxHdr.Id" class="btn btn-primary">Add Item</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                LotNo
            </th>
            <th>
                (Code) InvItem
            </th>
            <th>
                Heat
            </th>
            <th>
                Material
            </th>
            <th>
                ItemQty
            </th>
            <th>
                InvUom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReleasingDetailsModel.InvTrxDtls)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LotNo) 
                </td>
                <td>
                   ( @Html.DisplayFor(modelItem => item.InvItem.Code) )
                    @Html.DisplayFor(modelItem => item.InvItem.Description)
                    @Html.DisplayFor(modelItem => item.InvItem.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvUom.uom)
                </td>
                <td>
                    @if (Model.ReleasingDetailsModel.InvTrxHdr.InvTrxHdrStatusId == STATUS_PENDING)
                    {
                        <span>
                            <a asp-page="./ItemDetails/Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./ItemDetails/Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./ItemDetails/Delete" asp-route-id="@item.Id">Delete</a>
                        </span>
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>
