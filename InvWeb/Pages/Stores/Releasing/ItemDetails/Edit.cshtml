@page
@model InvWeb.Pages.Stores.Releasing.ItemDetails.EditModel

@{
    ViewData["Title"] = "Edit";
    var LotNotItems = Model.ItemDtlsCreateEditModel.LotNoItems as List<CoreLib.Inventory.Models.Items.ItemLotNoSelect>;
}

<h1>Edit</h1>

<h4>Releasing Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemDtlsCreateEditModel.InvTrxDtl.Id" />
            <div class="form-group" hidden>
                <label asp-for="ItemDtlsCreateEditModel.InvTrxDtl.InvTrxHdrId" class="control-label"></label>
                <select asp-for="ItemDtlsCreateEditModel.InvTrxDtl.InvTrxHdrId" class="form-control" asp-items="Model.ItemDtlsCreateEditModel.InvTrxHdrs"></select>
                <span asp-validation-for="ItemDtlsCreateEditModel.InvTrxDtl.InvTrxHdrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">   </label>
                <a asp-page="./SearchItem" asp-route-id="@Model.ItemDtlsCreateEditModel.InvTrxDtl.InvTrxHdrId" asp-route-itemDetailsId="@Model.ItemDtlsCreateEditModel.InvTrxDtl.Id" asp-route-actionType="Edit" class="btn btn-primary" style="width:80%;">  Update brand/origin <img src="/img/icons/icons-search.png" width="15" height="15" alt="search" /> </a>
            </div>
            <div class="form-group">
                <label class="control-label">Item</label>
                <select asp-for="ItemDtlsCreateEditModel.InvTrxDtl.InvItemId" class="form-control search-dropdown-initialize select2" asp-items="Model.ItemDtlsCreateEditModel.InvItems" id='itemDropdown' value="Viewbag.SelectedItemId"></select>
                <span asp-validation-for="ItemDtlsCreateEditModel.InvTrxDtl.InvItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Heat No </label>
                <input asp-for="ItemDtlsCreateEditModel.InvTrxDtl.BatchNo" class="form-control" maxlength="20" />
                <span asp-validation-for="ItemDtlsCreateEditModel.InvTrxDtl.BatchNo" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ItemDtlsCreateEditModel.InvTrxDtl.LotNo" class="control-label"></label>
                <div class="col-lg-8">
                    <div class="row">
                        <select asp-for="ItemDtlsCreateEditModel.InvTrxDtl.LotNo" class="form-control col-sm-8" asp-items="Model.ItemDtlsCreateEditModel.LotNo" id="LotNo"></select>
                        <span class="btn btn-primary col-sm-4" data-toggle="modal" data-target="#SearchLotNoModal"> Search </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label  class="control-label">Qty</label>
                <input asp-for="ItemDtlsCreateEditModel.InvTrxDtl.ItemQty" class="form-control" />
                <span asp-validation-for="ItemDtlsCreateEditModel.InvTrxDtl.ItemQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Uom</label>
                <select asp-for="ItemDtlsCreateEditModel.InvTrxDtl.InvUomId" class="form-control" asp-items="Model.ItemDtlsCreateEditModel.InvUoms" id="UomDropdown"></select>
                <span asp-validation-for="ItemDtlsCreateEditModel.InvTrxDtl.InvUomId" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ItemDtlsCreateEditModel.InvTrxDtl.InvTrxDtlOperatorId" class="control-label"></label>
                <select asp-for="ItemDtlsCreateEditModel.InvTrxDtl.InvTrxDtlOperatorId" class="form-control" asp-items="Model.ItemDtlsCreateEditModel.InvTrxDtlOperators"></select>
                <span asp-validation-for="ItemDtlsCreateEditModel.InvTrxDtl.InvTrxDtlOperatorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (LotNotItems.Count() != 0)
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.ItemDtlsCreateEditModel.InvTrxDtl.InvTrxHdrId">Back to Details</a>
</div>

<div hidden>
    <input value="@Model.ItemDtlsCreateEditModel.StoreId" id="StoreId" />
</div>

@{ await Html.RenderPartialAsync("_SearchLotNoModalEdit"); }

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Pages/Stores/Shared/ItemDetails/ItemUomDropdown.js"></script>
    <script>

        $('#itemDropdown').on('change', () => {

            //get selected item id
            var itemId = $('#itemDropdown').val();

            //get url
            var currentUrl = document.location.href;
            var url = new URL(currentUrl);

            //update url param
            url.searchParams.set("invItemId", itemId);
            var newUrl = url.href;

            //reload page
            document.location = newUrl;
        });

        function SelectLotNo(id) {
            $('#LotNo').val(id);

            $("#SearchLotNoModal").modal("hide");
        }


        $(document).ready(function () {
            var defaultItem = $("#itemDropdown option:selected").val();
            GetItemOumsWithId(defaultItem);

            SearchItem();
        });

        function SearchItem() {

            if (@ViewBag.SelectedItemId != 0) {

                //$('#itemDropdown').val(@ViewBag.SelectedItemId).change();
                GetItemOumsWithId(@ViewBag.SelectedItemId);
            }
        }
    </script>
}
