@page "{id:int?}"
@model InvWeb.Pages.Stores.Main.IndexModel

@{
    ViewData["Title"] = "Main";
    IEnumerable<WebDBSchema.Models.Stores.StoreInvCount> storeInvs = ViewBag.StoreInv;
}

<h1>
    @Html.DisplayFor(model => model.InvStore.StoreName)
</h1>

<div>
    <h4>Store</h4>

    <hr />
</div>

<div class="row">
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Receiving</h5>
                <h6 class="card-subtitle mb-2 text-muted">Receiving Items</h6>
                <a asp-page="../Receiving/Index" asp-route-storeId="@ViewBag.StoreId" class="card-link">Go to list</a>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Releasing</h5>
                <h6 class="card-subtitle mb-2 text-muted">Releasing Items</h6>
                <a asp-page="../Releasing/Index" asp-route-storeId="@ViewBag.StoreId" class="card-link">Go to list</a>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
        <div class="card" >
            <div class="card-body">
                <h5 class="card-title">Purchase Request</h5>
                <h6 class="card-subtitle mb-2 text-muted">Request Puchase Orders </h6>
                <a asp-page="../PurchaseRequest/Index" asp-route-storeId="@ViewBag.StoreId" class="card-link">Go to list</a>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6" >
        <div class="card" >
            <div class="card-body">
                <h5 class="card-title">Adjustment</h5>
                <h6 class="card-subtitle mb-2 text-muted"> Inventory Adjustment </h6>
                <a asp-page="../Adjustment/Index" asp-route-storeId="@ViewBag.StoreId" class="card-link">Go to list</a>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6">
        <div class="card" >
            <div class="card-body">
                <h5 class="card-title">Reports</h5>
                <h6 class="card-subtitle mb-2 text-muted">Inventory Reports </h6>
                @*<a asp-page="../Adjustment/Index" asp-route-storeId="@ViewBag.StoreId" class="card-link">Go to list</a>*@
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h4>Store Items</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Item <i class="bi-alarm"></i>
                            </th>
                            <th>
                                <span data-toggle="tooltip" data-placement="top" title="Available = (pending + accepted) - (requested + released)">
                                    Available
                                </span>
                            </th>
                            <th>
                                <span data-toggle="tooltip" data-placement="top" title="On-Hand = accepted - released">
                                    On-Hand
                                </span>
                               
                            </th>
                            <th>
                                Pending
                            </th>
                            <th>
                                Accepted
                            </th>
                            <th>
                                Requested
                            </th>
                            <th>
                                Released
                            </th>
                            <th>
                                Adjustments
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in storeInvs)
                        {
                            <tr>
                                <td>
                                    @item.Description
                                </td>
                                <td>
                                    @item.Available
                                </td>
                                <td>
                                    @item.OnHand
                                </td>
                                <td class="table-secondary">
                                    @item.ReceivePending
                                </td>
                                <td>
                                    @item.ReceiveAccepted
                                </td>
                                <td class="table-secondary">
                                    @item.ReleaseRequest
                                </td>
                                <td>
                                    @item.ReleaseReleased
                                </td>
                                <td class="table-secondary">
                                    @item.Adjustments
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts{ 
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })

</script>
}