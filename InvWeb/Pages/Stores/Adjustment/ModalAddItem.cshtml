<!-- Modal Edit -->
<div class="modal fade" id="ItemEditModal" tabindex="-1" role="dialog" aria-labelledby="itemEditModal" aria-hidden="true">
    <div class="modal-dialog" role="document" style="max-width:max-content">
        <div class="modal-content dialog-search-form" style="width:500px;">
            <div class="modal-header">
                <h5 class="modal-title"> Edit Item </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="form-group" hidden >
                        <label class="control-label"> Trx Id </label>
                        <input id="trxDtlsId" type="text" placeholder="Search item..." >
                    </div>
                    <div class="form-group">
                        <label class="control-label" style="width: 4rem !important;"> Item </label>
                        <select class="form-control" asp-items="ViewBag.InvItems" id='itemEditDropdown' style="width: 26.5rem !important;" disabled></select>
                        <img src="~/img/icons/icons-search.png" width="32" alt="search" class="item-search-icon" onclick="ShowItemEditSearchModal()">
                    </div>
                    <div class="form-group">
                        <div class="form-group" style="width:200px;margin-right:20px">
                            <label class="control-label" style="margin-right:30px;"> LotNo </label>
                            <input asp-for="InvTrxDtl.LotNo" id="itemEditLotNo" class="form-control" />
                        </div>
                        <div class="form-group" style="width:200px;">
                            <label class="control-label" style="margin-right:20px;"> BatchNo </label>
                            <input asp-for="InvTrxDtl.BatchNo" id="itemEditBatchNo" class="form-control" />
                        </div> 
                       
                    </div>
                        <div class="form-group">
                        <div class="form-group">
                            <label class="control-label" style="width: 4rem !important;"> Qty </label>
                            <input asp-for="InvTrxDtl.ItemQty" id="itemEditQty" class="form-control" style="width:90px; value="1" />
                            <select class="form-control" asp-items="ViewBag.UomsList" id="UomEditDropdown" hidden></select>
                            <span id="itemEditUomText" style="margin-left:10px;padding-top:5px;"> </span>
                        </div>

                        <div class="form-group">
                            <div class="form-group" style="width:200px;margin-right:20px">
                                <label class="control-label" style="margin-right:20px;margin-left: 30px;"> Operator </label>
                                <select asp-items="ViewBag.Operator" id="itemEditOperator" class="form-control"></select>
                            </div>
                            </div>
                    </div>

                   <div class="form-group">
                        <label class="control-label"> Remarks </label>
                        <input id="itemEditRemarks" type="text" placeholder="" class="form-control" style="wdith:450px;">
                    </div>

                    <hr>

                    <div>
                        <div class="form-group">
                            <div class="form-group" style="width:200px;margin-right:20px">
                                <label class="control-label" style="margin-right:30px;"> Brand </label>
                                <select asp-items="ViewBag.Brands" id="itemEditBrand" class="form-control"></select>
                            </div>
                            <div class="form-group" style="width:200px;">
                                <label class="control-label" style="margin-right:20px;"> Origin </label>
                                <select asp-items="ViewBag.Origins" id="itemEditOrigin" class="form-control"> </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-group" style="width:200px;margin-right:20px">
                                <label class="control-label" style="margin-right:30px;"> Area </label>
                                <select asp-items="ViewBag.StoreAreas" id="itemEditArea" class="form-control"></select>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <p class="text-danger" id="EditForm-Warning-Msg"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="submit" value="Save Changes" class="btn btn-primary" onclick="EditItemDetailsSaveChanges()" />
            </div>
        </div>
    </div>
</div>


