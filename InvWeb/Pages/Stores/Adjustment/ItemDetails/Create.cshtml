@page
@model InvWeb.Pages.Stores.Adjustment.ItemDetails.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Adjustment Transactions Items</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ItemsCreateModel.InvTrxDtl.InvTrxHdrId" class="control-label"></label>
                <select asp-for="ItemsCreateModel.InvTrxDtl.InvTrxHdrId" class="form-control" asp-items="Model.ItemsCreateModel.InvTrxHdrs"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Item</label>
                <select asp-for="ItemsCreateModel.InvTrxDtl.InvItemId" class="form-control search-dropdown-initialize select2" asp-items="Model.ItemsCreateModel.InvItems" id='itemDropdown'></select>
            </div>
            <div class="form-group">
                <label class="control-label"> HeatNo </label>
                <input asp-for="ItemsCreateModel.InvTrxDtl.BatchNo" class="form-control" maxlength="20" />
                <span asp-validation-for="ItemsCreateModel.InvTrxDtl.BatchNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Qty</label>
                <input asp-for="ItemsCreateModel.InvTrxDtl.ItemQty" class="form-control" value="0" />
                <span asp-validation-for="ItemsCreateModel.InvTrxDtl.ItemQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Uom</label>
                <select asp-for="ItemsCreateModel.InvTrxDtl.InvUomId" class="form-control" asp-items="Model.ItemsCreateModel.InvUoms" id="UomDropdown"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Operator</label>
                <select asp-for="ItemsCreateModel.InvTrxDtl.InvTrxDtlOperatorId" class="form-control" asp-items="Model.ItemsCreateModel.InvTrxDtlOperators"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@ViewBag.HdrId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Pages/Shared/ItemDetails/ItemUomDropdown.js"></script>
}
