@page
@model InvWeb.Pages.Stores.Adjustment.DetailsModel

@{
    ViewData["Title"] = "Details";
    IEnumerable<CoreLib.Inventory.Models.InvTrxDtl> invTrxDtls = ViewBag.InvTrxDtls;
    int STATUS_PENDING = 1;
}


<h1>Receiving</h1>

<div>
    <h4> Transaction Header</h4>
    <div>
        @if (Model.HeaderDetailsModel.InvTrxHdr.InvTrxHdrStatusId == STATUS_PENDING)
        {
            <a asp-page="./Edit" asp-route-id="@Model.HeaderDetailsModel.InvTrxHdr.Id">Edit</a> <span> | </span>
            <a asp-page="./Index" asp-route-storeId="@Model.HeaderDetailsModel.InvTrxHdr.InvStoreId" asp-route-status="PENDING">Back to List</a>
            <div class="pull-left">
                <a asp-page="../Printables/RequestForm" asp-route-id="@Model.HeaderDetailsModel.InvTrxHdr.Id" asp-route-type="@Model.HeaderDetailsModel.InvTrxHdr.InvTrxTypeId" target="_blank" class="btn btn-primary">Print Voucher</a>
            </div>
        }
        else
        {
            <a asp-page="./Index" asp-route-storeId="@Model.HeaderDetailsModel.InvTrxHdr.InvStoreId" asp-route-status="ACCEPTED">Back to List</a>
        }
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            LotNo
        </dt>
        <dd class="col-sm-10">
            @Model.HeaderDetailsModel.InvTrxHdr.Id
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderDetailsModel.InvTrxHdr.DtTrx)
        </dt>
        <dd class="col-sm-10">
            @Model.HeaderDetailsModel.InvTrxHdr.DtTrx.ToString("MMM dd yyyy")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderDetailsModel.InvTrxHdr.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeaderDetailsModel.InvTrxHdr.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderDetailsModel.InvTrxHdr.InvStore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeaderDetailsModel.InvTrxHdr.InvStore.StoreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderDetailsModel.InvTrxHdr.InvTrxType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeaderDetailsModel.InvTrxHdr.InvTrxType.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderDetailsModel.InvTrxHdr.InvTrxHdrStatu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeaderDetailsModel.InvTrxHdr.InvTrxHdrStatu.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HeaderDetailsModel.InvTrxHdr.Remarks)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HeaderDetailsModel.InvTrxHdr.Remarks)
        </dd>
    </dl>
</div>
<hr />
<h4> Transaction Details</h4>
<p>
    @if (Model.HeaderDetailsModel.InvTrxHdr.InvTrxHdrStatusId == STATUS_PENDING)
    {
        <a asp-page="./ItemDetails/Create" asp-route-hdrId="@Model.HeaderDetailsModel.InvTrxHdr.Id" class="btn btn-primary">Add Item</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                (Code) Item
            </th>
            <th>
                Heat No.
            </th>
            <th>
                Material
            </th>
            <th>
                Qty
            </th>
            <th>
                Uom
            </th>
            <th>
                Operation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HeaderDetailsModel.InvTrxDtls)
        {
            <tr>
                <td>
                    ( @Html.DisplayFor(modelItem => item.InvItem.Code) )
                    @Html.DisplayFor(modelItem => item.InvItem.Description)
                    @Html.DisplayFor(modelItem => item.InvItem.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BatchNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvUom.uom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvTrxDtlOperator.Description)
                </td>
                <td>
                    @if (Model.HeaderDetailsModel.InvTrxHdr.InvTrxHdrStatusId == STATUS_PENDING)
                    {
                        <a asp-page="./ItemDetails/Edit" asp-route-id="@item.Id">Edit</a> <span> | </span> 
                        <a asp-page="./ItemDetails/Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

