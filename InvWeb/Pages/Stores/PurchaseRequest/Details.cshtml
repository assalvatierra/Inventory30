@page
@model InvWeb.Pages.Stores.PurchaseRequest.DetailsModel

@{
    ViewData["Title"] = "Purchase Request Details";
    IEnumerable<CoreLib.Inventory.Models.InvPoItem> invPoItems = ViewBag.InvPoItems;
    int STATUS_PENDING = 1;
}

<h1>Purchase Order Header Details</h1>

<div>

    @if (Model.InvPoHdrDetails.InvPoHdr.InvPoHdrStatusId == STATUS_PENDING)
        {
            <a asp-page="./Index" asp-route-storeId="@Model.InvPoHdrDetails.InvPoHdr.InvStoreId">Back to List</a><span> | </span>
        <a asp-page="./Edit" asp-route-id="@Model.InvPoHdrDetails.InvPoHdr.Id">Edit</a>
        <div class="pull-left">
            <a asp-page="../Printables/RequestForm" asp-route-id="@Model.InvPoHdrDetails.InvPoHdr.Id" asp-route-type="4" target="_blank" class="btn btn-primary">Print Voucher</a>
        </div>
        }
        else
        {
        <a asp-page="./Index" asp-route-storeId="@Model.InvPoHdrDetails.InvPoHdr.InvStoreId" asp-route-status="ACCEPTED">Back to List</a>
        }

</div>
<hr />
<div>
    <h4>Request Header</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            LotNo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdrDetails.InvPoHdr.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdrDetails.InvPoHdr.DtPo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdrDetails.InvPoHdr.DtPo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdrDetails.InvPoHdr.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdrDetails.InvPoHdr.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdrDetails.InvPoHdr.InvSupplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdrDetails.InvPoHdr.InvSupplier.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdrDetails.InvPoHdr.InvStore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdrDetails.InvPoHdr.InvStore.StoreName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InvPoHdrDetails.InvPoHdr.InvPoHdrStatu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvPoHdrDetails.InvPoHdr.InvPoHdrStatu.Status)
        </dd>
    </dl>
</div>

<hr />
<h4> Request Items </h4>
<p>
    <a asp-page="./ItemDetails/Create" asp-route-hdrId="@Model.InvPoHdrDetails.InvPoHdr.Id" class="btn btn-primary">Add Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                InvItem
            </th>
            <th>
                ItemQty
            </th>
            <th>
                InvUom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in invPoItems)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvItem.Code) - 
                @Html.DisplayFor(modelItem => item.InvItem.Description)
                @Html.DisplayFor(modelItem => item.InvItem.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvUom.uom)
            </td>
            <td>
                <a asp-page="./ItemDetails/Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./ItemDetails/Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./ItemDetails/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
