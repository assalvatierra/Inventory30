@page
@model InvWeb.Pages.Stores.PurchaseRequest.ItemDetails.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InvPoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvPoItem.Id" />
            <div class="form-group" hidden>
                <label asp-for="InvPoItem.InvPoHdrId" class="control-label"></label>
                <select asp-for="InvPoItem.InvPoHdrId" class="form-control" asp-items="ViewBag.InvPoHdrId"></select>
                <span asp-validation-for="InvPoItem.InvPoHdrId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Item </label>
                <select asp-for="InvPoItem.InvItemId" class="form-control search-dropdown-initialize" asp-items="ViewBag.InvItemId"></select>
                <span asp-validation-for="InvPoItem.InvItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Qty</label>
                <input asp-for="InvPoItem.ItemQty" class="form-control" />
                <span asp-validation-for="InvPoItem.ItemQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Uom </label>
                <select asp-for="InvPoItem.InvUomId" class="form-control" asp-items="ViewBag.InvUomId"></select>
                <span asp-validation-for="InvPoItem.InvUomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.InvPoItem.InvPoHdrId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
