@page "{HdrId:int?}"
@model InvWeb.Pages.Stores.PurchaseRequest.ItemDetails.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InvPoItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="InvPOItemCreate.InvPoItem.InvPoHdrId" class="control-label"></label>
                <select asp-for="InvPOItemCreate.InvPoItem.InvPoHdrId" class="form-control" asp-items="Model.InvPOItemCreate.InvPoHdrList"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Item</label>
                <select asp-for="InvPOItemCreate.InvPoItem.InvItemId" class="form-control search-dropdown-initialize select2" asp-items="Model.InvPOItemCreate.InvItemList"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Qty</label>
                <input asp-for="InvPOItemCreate.InvPoItem.ItemQty" class="form-control" value="1" />
                <span asp-validation-for="InvPOItemCreate.InvPoItem.ItemQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Uom</label>
                <select asp-for="InvPOItemCreate.InvPoItem.InvUomId" class="form-control" asp-items="Model.InvPOItemCreate.InvUomList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.InvPOItemCreate.HdrId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
