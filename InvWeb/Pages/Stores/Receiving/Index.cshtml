@page "{storeId:int?}"
@model InvWeb.Pages.Stores.Receiving.IndexModel

@{
    ViewData["Title"] = "Receiving";
}

<h1>Receiving</h1>

<p>
    <a asp-page="../Main/Index" asp-route-id="@ViewBag.StoreId">Go back to MyStore</a>
</p>
<p>
    <a asp-page="Create" asp-route-storeId="@ViewBag.StoreId">Create New</a>
</p>
<form method="post">
    <div hidden>
        <input type="text" value="@ViewData["StoreId"]" name="storeId" id="storeId" />
    </div>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-outline-primary" id="status-pending">
            <input type="radio" asp-for="Status" autocomplete="off" value="PENDING" checked> Pending
        </label>
        <label class="btn btn-outline-primary" id="status-accepted">
            <input type="radio" asp-for="Status" autocomplete="off" value="ACCEPTED"> Accepted
        </label>
    </div>
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-outline-primary" id="orderby-asc">
            <input type="radio" asp-for="Orderby" autocomplete="off" value="ASC" checked> ASC
        </label>
        <label class="btn btn-outline-primary" id="orderby-desc">
            <input type="radio" asp-for="Orderby" autocomplete="off" value="DESC"> DESC
        </label>
    </div>
    <button class="btn btn-primary" type="submit"> Filter </button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvTrxHdr[0].DtTrx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvTrxHdr[0].UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvTrxHdr[0].Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvTrxHdr[0].InvStore)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InvTrxHdr)
        {
            <tr>
                <td>
                    @item.DtTrx.ToString("MMM dd yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvStore.StoreName)
                </td>
                <td>
                    @if (item.InvTrxHdrStatusId == 1)
                    {
                        <button class="btn btn-primary" onclick="ApproveHdr('@item.Id')"> Accept </button>
                        <button class="btn btn-light" onclick="CancelHdr('@item.Id')"> Cancel </button>
                    }

                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

        @if (Model.InvTrxHdr == null)
        {
            <tr>
                <td class="text-center" colspan="6">
                    <span class="text-info"> No result found</span>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script type="text/javascript" src="~/js/Store/IndexFilter.js"> </script>
    <script>

        $(() => {
            //on init status
            StatusFilter("@Model.Status");
            OrderFilter("@Model.Orderby");

        });

    </script>
} 