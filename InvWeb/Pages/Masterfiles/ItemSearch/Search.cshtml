@page "{SearchStr?}"
@model InvWeb.Pages.Masterfiles.ItemSearch.SearchModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<form method="get">
    <input type="text" asp-for="SearchStr"  />

    <input type="submit" value="Submit" class="btn btn-primary" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Description
            </th>
            <th>
                Qty
            </th>
            <th>
                InvUom
            </th>
            <th>
                Store
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemSearchResults) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvStore)
                </td>
                <td>
                    <a asp-page="./ItemPrices" asp-route-id="@item.Id">Prices</a>
                </td>
            </tr>
         } 
    </tbody>
</table>
