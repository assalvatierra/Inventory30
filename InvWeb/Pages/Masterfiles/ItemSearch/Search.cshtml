@page "{SearchStr?}"
@model InvWeb.Pages.Masterfiles.ItemSearch.SearchModel

@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<form method="get">
    <input type="text" asp-for="SearchStr"  />

    <input type="submit" value="Submit" class="btn btn-primary" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Code
            </th>
            <th>
                Description
            </th>
            <th>
                Qty
            </th>
            <th>
                InvUom
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ItemSearchResults) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item)

                    @if (!String.IsNullOrEmpty(item.ItemRemarks))
                    {
                        <br />
                        <span style="color:gray;">
                            @Html.DisplayFor(modelItem => item.ItemRemarks)
                        </span>
                    }

                    @if(!String.IsNullOrEmpty(item.ItemSpec)){
                        <br />
                        <span style="font-size:11px;"> @item.ItemSpec </span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uom)
                </td>
                <td>
                    <a asp-page="./ItemPrices" asp-route-id="@item.Id">Supplier Prices</a> |

                    <a asp-page="./StoreStocks" asp-route-id="@item.Id">Store Stocks</a>
                </td>
            </tr>
         } 
    </tbody>
</table>
