@page
@model InvWeb.Pages.Masterfiles.ItemCustomSpecType.IndexModel

@{
    ViewData["Title"] = "Specification Types";
}

<h1>Specification Types</h1>

<p>
    <a asp-page="Create">Create New</a>|
    <a asp-page="../ItemCustomSpec/Index"> Custom Specification</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvCustomSpecType[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InvCustomSpecType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
