@page
@model InvWeb.Pages.Masterfiles.Stores.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>InvStoreUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvStoreUser.Id" />
            <div class="form-group">
                <label asp-for="InvStoreUser.InvStoreUserId" class="control-label"></label>
                <input asp-for="InvStoreUser.InvStoreUserId" class="form-control" value="@ViewData["UserId"]" />
                <span asp-validation-for="InvStoreUser.InvStoreUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvStoreUser.InvStoreId" class="control-label"></label>
                <select asp-for="InvStoreUser.InvStoreId" class="form-control" asp-items="ViewBag.InvStoreId"></select>
                <span asp-validation-for="InvStoreUser.InvStoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-id="@Model.InvStoreUser.InvStoreId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
