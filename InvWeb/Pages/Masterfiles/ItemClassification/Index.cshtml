@page
@model InvWeb.Pages.Masterfiles.ItemClassification.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Item Classifications</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive card rounded-3 card-round-border">

<table class="table custom-table-list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvClassification[0].Classification)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.InvClassification) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Classification)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>