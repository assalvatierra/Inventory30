@model InvWeb.Pages.Masterfiles.ItemMaster.EditModel

<div class="col-md-5">
    <h4>Specifications</h4>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="InvItemSpec_Steel.Id" />

        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.Code" class="control-label"></label>
            <input asp-for="InvItemSpec_Steel.Code" class="form-control" maxlength="40" />
            <span asp-validation-for="InvItemSpec_Steel.Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.Description" class="control-label"></label>
            <input asp-for="InvItemSpec_Steel.Description" class="form-control" maxlength="160" />
            <span asp-validation-for="InvItemSpec_Steel.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.SteelMaterialId" class="control-label"> Category </label>
            <select asp-for="InvItemSpec_Steel.SteelMaterialId" id="InvCategoryId" class="form-control"
                    asp-items="ViewBag.SteelMaterialId"></select>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.SteelMaterialGradeId" class="control-label"> Category </label>
            <select asp-for="InvItemSpec_Steel.SteelMaterialGradeId" id="InvCategoryId" class="form-control"
                    asp-items="ViewBag.SteeelMaterialGradeId"></select>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.SteelBrandId" class="control-label"> Brand </label>
            <select asp-for="InvItemSpec_Steel.SteelBrandId" id="InvCategoryId" class="form-control"
                    asp-items="ViewBag.SteelBrandId"></select>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.SteelMainCatId" class="control-label"> Main Category </label>
            <select asp-for="InvItemSpec_Steel.SteelMainCatId" id="InvCategoryId" class="form-control"
                    asp-items="ViewBag.SteelMainCatId"></select>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.SteelSubCatId" class="control-label"> Sub Category </label>
            <select asp-for="InvItemSpec_Steel.SteelSubCatId" id="InvCategoryId" class="form-control"
                    asp-items="ViewBag.SteelSubCatId"></select>
        </div>
        <div class="form-group">
            <label asp-for="InvItemSpec_Steel.SteelOriginId" class="control-label"> Origin </label>
            <select asp-for="InvItemSpec_Steel.SteelOriginId" id="InvCategoryId" class="form-control"
                    asp-items="ViewBag.SteelOriginId"></select>
        </div>
    </form>
</div>