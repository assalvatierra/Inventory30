@page
@model InvWeb.Pages.Masterfiles.ItemMaster.Classifications.AddModel

@{
    ViewData["Title"] = "Select Classification";
    IEnumerable<WebDBSchema.Models.InvClassification> invClassifications = ViewData["InvClassificationList"] as IEnumerable<WebDBSchema.Models.InvClassification>;

}

<h1>Select Classification</h1>

<h4> @ViewData["Item"] </h4>
<div>
    <a asp-page="../Index">Back to List</a>
</div>
<hr />
<div class="row" hidden>
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvItemClass.InvItemId" class="control-label"></label>
                <select asp-for="InvItemClass.InvItemId" class ="form-control" asp-items="ViewBag.InvItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InvItemClass.InvClassificationId" class="control-label"></label>
                <select asp-for="InvItemClass.InvClassificationId" class="form-control" id="InvClassificationId" asp-items="ViewBag.InvClassificationId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="SubmitBtn" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="row">
    <div clas="col-md-4" style="padding:15px;" >
        <div class="list-group" style="width:350px">
           @foreach (var itemclass in invClassifications)
            {
                <button class="list-group-item list-group-item-action" onclick="SelectClassification(@itemclass.Id)"> @itemclass.Classification </button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>    
        function SelectClassification(id){

            //console.log("selected classification");

            $("#InvClassificationId").val(id).change();
            $("#SubmitBtn").trigger("click");
        }
    </script>
}
