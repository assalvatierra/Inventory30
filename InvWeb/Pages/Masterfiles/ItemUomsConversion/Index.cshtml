@page
@model InvWeb.Pages.Masterfiles.ItemUomsConversion.IndexModel

@{
    ViewData["Title"] = "Conversions";
}

<h1>Conversions</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive card rounded-3 card-round-border">

    <table class="table custom-table-list">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvUomConversion[0].UomsConversion.InvUomId_base)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvUomConversion[0].UomsConversion.InvUomId_into)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvUomConversion[0].UomsConversion.Factor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvUomConversion[0].UomsConversion.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.InvUomConversion != null) { 
        
        @foreach (var item in Model.InvUomConversion) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UomFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UomTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UomsConversion.Factor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UomsConversion.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./ConvItems/Index" asp-route-id="@item.Id">Items</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        }
    </tbody>
</table>
</div>