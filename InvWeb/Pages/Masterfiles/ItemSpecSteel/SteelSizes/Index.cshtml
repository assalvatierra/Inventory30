@page
@model InvWeb.Pages.Masterfiles.ItemSpecSteel.SteelSizes.IndexModel

@{
    ViewData["Title"] = "Steel Sizes";
}

<h1>SteelSizes</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<div class="table-responsive card rounded-3 card-round-border" >

    <table class="table custom-table-list rounded-3 overflow-hidden">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SteelSizes[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SteelSizes[0].Code)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SteelSizes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>