@page "{id:int?}"
@model InvWeb.Pages.Masterfiles.SupplierItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InvSupplierItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.InvSupplierId" class="control-label"></label>
                <select asp-for="InvSupplierItem.InvSupplierId" class ="form-control" asp-items="ViewBag.InvSupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.InvItemId" class="control-label"></label>
                <select asp-for="InvSupplierItem.InvItemId" class ="form-control" asp-items="ViewBag.InvItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.Remarks" class="control-label"></label>
                <input asp-for="InvSupplierItem.Remarks" class="form-control" />
                <span asp-validation-for="InvSupplierItem.Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.Price" class="control-label"></label>
                <input asp-for="InvSupplierItem.Price" class="form-control" />
                <span asp-validation-for="InvSupplierItem.Price" class="text-danger"></span>
            </div>
            <p class="text-muted"> Hidden</p>
            <div class="form-group">
                <label asp-for="InvSupplierItem.LastUpdate" class="control-label"></label>
                <input asp-for="InvSupplierItem.LastUpdate" class="form-control datetimepicker" />
                <span asp-validation-for="InvSupplierItem.LastUpdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.LeadTime" class="control-label"></label>
                <input asp-for="InvSupplierItem.LeadTime" class="form-control" />
                <span asp-validation-for="InvSupplierItem.LeadTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InvSupplierItem.UserId" class="control-label"></label>
                <input asp-for="InvSupplierItem.UserId" class="form-control" value="@ViewBag.UserId" />
                <span asp-validation-for="InvSupplierItem.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-id="@ViewBag.SupplierId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(() => {
            //set default 
            $('.datetimepicker').val(moment().format("MMM DD YYYY hh:mm A"));
        });
    </script>
}
